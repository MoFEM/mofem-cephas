#!/bin/sh

MOFEM_SOURCE=@CMAKE_SOURCE_DIR@
MOFEM_BUILD=@CMAKE_BINARY_DIR@
MOFEM_INSTALL_PREFIX=@CMAKE_INSTALL_PREFIX@

cd $MOFEM_BUILD
if [ -f $HOME/.mofem_config/ctest_script ]; then
  ctest -VV -S $HOME/.mofem_config/ctest_script
else
  ctest -D Experimental
fi

cd $MOFEM_INSTALL_PREFIX
if [ -f $HOME/.mofem_config/ctest_user_modules_script]; then
  ctest -VV -S $HOME/.mofem_config/ctest_user_modules_script
else 
  ctest -D Experimental
fi
